<launch>
    <arg name="kinova_robotType" default="j2s6s200" />
    <arg name="hri_topic" default="/hri_safety_sense/emergency_stop" />

    <group ns="$(arg kinova_robotType)_safety">
        <node name="estop" pkg="kinova_hri_estop" type="estop_monitor" output="screen">
            <remap from="~input" to="$(arg hri_topic)" />
            <param name="robot_name_prefix" type="str" value="/$(arg kinova_robotType)_driver" />
        </node>
    </group>

    <include file="$(find kinova_bringup)/launch/kinova_robot.launch">
        <arg name="kinova_robotType" value="$(arg kinova_robotType)" />
    </include>
</launch>